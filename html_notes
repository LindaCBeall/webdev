<h1>HTML tables</h1>

<table border="1">
  <!-- no one uses border in HTML, that's for CSS, this is just to demo -->
  <!-- tr=table row -->
  <tr>
    <th>table/column header1</th>
    <th>table/column header2</th>
  </tr>
  <tr>
    <td>red</td>
    <td>orange</td>
  <!-- 1 row with 2 columns red and orange -->
  </tr>
</table>
<!-- no difference in appearance from th and tr -->

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
    </tr>
    <tbody>
      <tr>
        <td>Rusty</td>
        <td>2</td>
        <td>Mutt</td>
      </tr>
        <td>Wyatt</td>
        <td>13</td>
        <td>Golden</td>
    </tbody>
  </thead>
</table>
